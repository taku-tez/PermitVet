{
  "name": "@permitvet/cli",
  "version": "0.13.0",
  "description": "Pure CIEM (Cloud Infrastructure Entitlement Management) - IAM security scanner for AWS, Azure, GCP, OCI, Kubernetes",
  "main": "src/index.js",
  "bin": {
    "permitvet": "./bin/permitvet.js"
  },
  "scripts": {
    "test": "node --test test/*.test.js",
    "test:aws": "node bin/permitvet.js scan aws",
    "test:aws:check": "node bin/permitvet.js scan aws --format json --output /tmp/permitvet-aws.json && node -e \"const r=require('/tmp/permitvet-aws.json'); console.log('Critical:', r.summary?.critical || 0); process.exit(r.summary?.critical > 0 ? 1 : 0)\"",
    "lint": "eslint src/ bin/ test/",
    "start": "node bin/permitvet.js",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.js\" \"bin/**/*.js\" \"test/**/*.js\"",
    "lint:fix": "eslint --fix src/ bin/ test/",
    "build": "tsc",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "iam",
    "ciem",
    "rbac",
    "cloud-security",
    "aws",
    "azure",
    "gcp",
    "oci",
    "kubernetes",
    "permissions",
    "entitlements",
    "privilege-escalation",
    "least-privilege",
    "access-analyzer",
    "iam-recommender"
  ],
  "author": "tez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taku-tez/PermitVet.git"
  },
  "bugs": {
    "url": "https://github.com/taku-tez/PermitVet/issues"
  },
  "homepage": "https://github.com/taku-tez/PermitVet#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-accessanalyzer": "^3.0.0",
    "@aws-sdk/client-iam": "^3.0.0",
    "@aws-sdk/client-organizations": "^3.0.0",
    "@aws-sdk/client-sts": "^3.0.0",
    "@azure/arm-authorization": "^9.0.0",
    "@azure/arm-managementgroups": "^2.0.0",
    "@azure/arm-subscriptions": "^6.0.0",
    "@azure/identity": "^4.0.0",
    "@google-cloud/iam-credentials": "^3.3.0",
    "@google-cloud/resource-manager": "^6.2.1",
    "@kubernetes/client-node": "^1.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "googleapis": "^140.0.1",
    "oci-sdk": "^2.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "types": "src/index.d.ts"
}
